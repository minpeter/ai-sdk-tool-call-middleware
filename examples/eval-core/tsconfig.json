{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "module": "NodeNext",
    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "NodeNext",
    "rootDir": "./src",
    "outDir": "./build",
    "skipLibCheck": true,
    "composite": true
  },
  "references": [
    {
      "path": "../../packages/eval"
    },
    {
      "path": "../../packages/parser"
    }
  ],
  "include": ["src/**/*.ts"]
}
