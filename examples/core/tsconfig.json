{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "declaration": true,
    "sourceMap": true,
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "module": "esnext",
    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler",
    "rootDir": "./src",
    "outDir": "./build",
    "skipLibCheck": true,
    "composite": true
  },
  "include": ["src/**/*.ts"]
}
