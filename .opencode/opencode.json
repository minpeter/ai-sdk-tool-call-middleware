{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["../packages/opencode-plugin/dist"],
  "provider": {
    "tcm": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "TCM Friendli",
      "options": {
        "baseURL": "https://api.friendli.ai/serverless/v1",
        "apiKey": "{env:FRIENDLI_TOKEN}"
      },
      "models": {
        "glm-native": {
          "id": "zai-org/GLM-4.6",
          "name": "GLM-4.6 (Native Tool Calling)",
          "reasoning": true,
          "limit": {
            "context": 128000,
            "output": 8192
          }
        }
      }
    },
    "tcm-xml": {
      "npm": "file:///Users/minpeter/github.com/minpeter/ai-sdk-tool-call-middleware/.opencode/provider.js",
      "name": "TCM Friendli XML",
      "options": {
        "baseURL": "https://api.friendli.ai/serverless/v1",
        "apiKey": "{env:FRIENDLI_TOKEN}"
      },
      "models": {
        "glm-xml": {
          "id": "zai-org/GLM-4.6",
          "name": "GLM-4.6 (XML Tool Calling)",
          "reasoning": true,
          "limit": {
            "context": 128000,
            "output": 8192
          }
        }
      }
    }
  }
}
